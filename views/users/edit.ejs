<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class='container'>
    <div id='home-actions'>
        <div class="action-cover">
            <h2>Account Settings</h2>
            <form action="/users/<%= locals.user._id %>?_method=PUT" method='POST' class='dashboard-form'>
                <label for="name">Full Name</label>
                <input type="text" name='name' value='<%= locals.user.name %>' autocomplete='off'>
                <label for="email">Email</label>
                <input type="text" name='email' value='<%= locals.user.email %>' autocomplete='off'>
                <label for="dateOfBirth">Birth Date</label>
                <input type="datetime-local" name="dateOfBirth" value='<%= moment(locals.user.dateOfBirth).format('YYYY-MM-DDThh:mm') %>' autocomplete='off'>
                <label for="password">Password</label>
                <input type="password" name="password" placeholder='Password' autocomplete="new-password" autocomplete='off'>
                <label for="address">Address</label>
                <input type="text" name="address" value='<%= locals.user.location.address %>' autocomplete='off'>
                <label for="city">City</label>
                <input type="text" name="city" value='<%= locals.user.location.city %>' autocomplete='off'>
                <label for="state">State</label>
                <input type="text" name="state" value='<%= locals.user.location.state %>' autocomplete='off'>
                <label for="phoneNumber">Phone Number</label>
                <input type="text" name="phoneNumber" value='<%= locals.user.phoneNumber %>' autocomplete='off'>
                <input type="submit" value="UPDATE">
            </form>
            <form class='delete-btn' action="/users/<%= locals.user.id %>?_method=DELETE" method='POST'>
                <input type="submit" value="Delete my account">
            </form>
            <a class='return-link' href="/">&#x2190;</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>