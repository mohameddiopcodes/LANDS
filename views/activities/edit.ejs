<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class='container'>
    <div id='home-actions'>
        <div class="action-cover">
            <h2>Edit Activity</h2>
            <form spellcheck="false" action="/activities/<%= activity._id %>?_method=PUT" method='POST' class='dashboard-form'>
                <label for="name">Name</label>
                <input type="text" name='name' value='<%= activity.name %>' autocomplete='off'>
                <label for="date">Date</label>
                <input type="datetime-local"  value='<%= moment(activity.date).format('YYYY-MM-DDThh:mm') %>' name="date" autocomplete='off'>
                <label for="address">Address</label>
                <input type="text" name="address" value='<%= activity.place.address %>' autocomplete='off'>
                <label for="city">City</label>
                <input type="text" name="city" value='<%= activity.place.city %>' autocomplete='off'>
                <label for="state">State</label>
                <input type="text" name="state"  value='<%= activity.place.state %>' autocomplete='off'>
                <label for="phoneNumber">Description</label>
                <textarea name="description"><%= activity.description %></textarea>
                <input type="submit" value="UPDATE">
            </form>
            <form class='delete-btn' action="/activities/<%= activity._id %>?_method=DELETE" method='POST'>
                <input type="submit" value="Delete activity">
            </form>
            <a class='return-link' href="/activities/<%= activity._id %>">&#x2190;</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>